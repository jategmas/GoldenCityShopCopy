@model DomainClasses.Entities.Picture
@{
    var imageUrl = VirtualPathUtility.ToAbsolute("~/Uploads/" + Model.Path);
}
<div class="col-md-3 teaser lazyload">
    <img src="@Url.Content("~/Uploads/"+Model.Path)?w=60&h=60&mode=crop" class="img-thumbnail lazyload" width="60" height="60">
</div>
<div class="col-md-6">
    <input type="text" class="form-control input-sm select" value="@imageUrl">
</div>
<div class="col-md-2">
    <span id="row-@Model.Id" class="btn btn-danger btn-sm">حذف</span>
</div>